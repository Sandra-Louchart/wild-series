{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>See here all programs : </h1>
    {% for program in programs %}
       <div>
            <h2>{{ loop.index }} / {{ program.title }} - Category : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">More information</a>
        </div
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
    Back home
    </a>
{% endblock %}