{% extends 'base.html.twig' %}

{% block title %}All programs{% endblock %}

{% block body %}
    <h1>Tous les  programmes : </h1>
    {{ form_start(form) }}
    {{ form_widget(form) }}
    <button>Search</button>
    {{ form_end(form) }}
    {% for program in programs %}
       <div>
            <h2>{{ loop.index }} / {{ program.title }} - Category : {{ program.category.name }}</h2>
            <p>{{ program.summary }}</p>
            <a href="{{ path("program_show", { slug: program.slug }) }}">More information</a>
        </div
    {% else %}
        Aucune série trouvée.
    {% endfor %}
{% if app.user %}
 <i class="{{ app.user.isInWatchlist(programs) ? 'fas' : 'far' }} fa-heart fa-xs watchlist"></i>
 {% endif %}

    <a href="{{ path('app_index') }}">
   Retour à l'acceuil
    </a>

{% endblock %}
{% block javascripts %}
    {{ encore_entry_script_tags('watchlist') }}
{% endblock %}