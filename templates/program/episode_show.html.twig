{% extends 'base.html.twig' %}

{% block title %}Season {{ season.number }} of {{ program.title }}{% endblock %}

{% block body %}
    <div class="container-fluid ml-4">
        <h1 class="text-center my-4">Season {{ season.number }} Episode {{ episode.number }} of {{ program.title }}</h1>
        <h2>{{ episode.title }}</h2>
        <div class="mb-2">
            {{ episode.synopsis }}
        </div>
        <h3> Commentaires : </h3>
        <ul>
            {% for comment in episode.comments %}
                <li>De : {{ comment.author.email }} <br>
                    Note : {{ comment.rate }} <br>
                    Commentaire : {{ comment.comment }}
                </li>
                {% if app.user %}
                    {% if is_granted("ROLE_ADMIN") or app.user.email == comment.author.email %}
                        {{ include('program/_deleteComment_form.html.twig') }}
                    {% endif %}
                {% endif %}
            {% endfor %}
        </ul>
        {% if app.user %}
            <h3>Ajouter un commentaire</h3>
            {{ include('episode/_form.html.twig') }}
        {% endif %}

    </div>

{% endblock %}